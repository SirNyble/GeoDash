<resources>


    <style name="MainTheme" parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="android:colorBackground">@color/background_holo_light</item>
        <item name="android:textColorPrimary">@color/primary_text_holo_light</item>
        <item name="android:textColorSecondary">@color/secondary_text_holo_light</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="ToolBarStyle" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@color/toolText</item>
        <item name="android:textColorSecondary">@color/toolText</item>
        <item name="actionMenuTextColor">@color/toolText</item>
        <item name="actionOverflowButtonStyle">@color/toolText</item>
        <item name="drawerArrowStyle">@color/toolText</item>
    </style>

</resources>
